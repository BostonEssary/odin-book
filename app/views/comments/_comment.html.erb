<div id="<%= dom_id comment%>" class="m-auto mx-4 mb-3 p-4 bg-indigo-400 w-72 flex flex-col content-start rounded ">
    <div class="flex items-center">
        <%= image_tag comment.user.small_thumb, class: "rounded-full"%>
        <%= comment.user.name%>
    </div>
    
    <div class="ml-8 my-2">
        <%= comment.content %>
    
    </div>
    <p class="text-xs font-thin text-black/50"><%= comment.date_format %></p>
</div>