
<%= turbo_frame_tag "new_post", target: "_top" do%>
    <div data-controller="reveal">
        

        <div id="toggle-target" data-reveal-target="item" class="mt-4 hidden">
                    <%= form_with model: @post do |form|%>
            <div class="flex items-center">
                <%= form.text_area :body, class: "rounded mr-2"%>
                <%= form.submit 'Submit'%>
            </div>
            
            <% end %>
        </div>

        <button id="button-target" data-action="click->reveal#toggle" type="button" class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border rounded shadow">
            Post?
        </button>
    </div>
    
<% end %>