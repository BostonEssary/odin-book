
<div class="flex flex-col items-center w-full h-max">
  <% if !!flash[:error] %>
    <div class="bg-red-500 p-2 m-2 rounded">
      
      <%= flash[:error]%>
    
    </div>
  <% end %>
  <%= turbo_frame_tag "new_post", src: new_post_path(@post), class: "w-80 m-4", target: "_top" %>

  
  <div id="posts" class="w-full md:w-1/2">
    <% @posts.reverse.each do |post|%>
        <%turbo_stream_from post%>
        <%= render partial: "posts/post", locals: {post: post}%>
    <% end %>
  </div>
</div>

