<div class="navbar flex items-center justify-between w-full ml-auto mr-auto p-2">
    <div class="">
        <%= link_to 'Brand-Name', root_path%>
    </div>

    <div class="links flex items-center basis-3/5 md:basis-1/4">
        <% if user_signed_in? %>
            <div class="flex items-center justify-around w-full">
                <%= render 'notifications/notification_bell'%>
                <%= button_to "Profile", profile_path, method: :get%>
                <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
            </div>
        <% else %>
            <%= button_to 'Login', new_user_session_path, method: :get %>
        <% end %>
    </div>
</div>