<div class="bg-indigo-400 rounded p-4">
  <h2 class="text-xl">Join the fun!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-4">
    <%= f.label :email, class: "font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field m-4">
    <%= f.label :avatar, class: "font-bold"  %><br />
    <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar" %>
  </div>

  <div class="field m-4">
    <%= f.label :password, class: "font-bold"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field m-4">
    <%= f.label :password_confirmation, class: "font-bold"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "bg-pink-200 hover:bg-pink-300 p-2 rounded-full m-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
